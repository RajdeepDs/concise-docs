{
  "name": "v0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/email/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "format": "biome format --write .",
    "lint": "turbo lint && manypkg check",
    "typecheck": "turbo typecheck",
    "dev": "turbo dev --parallel",
    "test": "turbo test --parallel",
    "start:web": "turbo start --filter=@concise-docs/web",
    "dev:web": "turbo dev --filter=@concise-docs/web ",
    "start:api": "turbo start --filter=@concise-docs/api",
    "dev:api": "turbo dev --filter=@concise-docs/api ",
    "docker:up": "docker compose up -d",
    "db:generate": "cd packages/database && bun db:generate",
    "db:migrate": "cd packages/database && bun db:migrate",
    "db:deploy": "turbo db:deploy --filter=@concise-docs/database"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.4",
    "@manypkg/cli": "^0.23.0",
    "turbo": "2.3.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.1.38",
  "resolutions": {
    "jackspeak": "2.1.1"
  }
}
